<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                >
    <ImageView
        android:id="@+id/checkalbum_icon"
        android:layout_width="60dp"
        android:layout_height="60dp" android:layout_marginRight="15dp"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_toRightOf="@id/checkalbum_icon" android:text="111111"
    android:layout_marginTop="5dp" android:id="@+id/checkalbum_title" android:textSize="18sp"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
    android:text="22222222" android:layout_toRightOf="@id/checkalbum_icon" android:layout_below="@id/checkalbum_title"
    android:layout_marginTop="15dp" android:id="@+id/checkalbum_size"/>
</RelativeLayout>